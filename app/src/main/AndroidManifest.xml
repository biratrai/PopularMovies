<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gooner10.popularmoviesapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Activity.extras.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.ui.activity.MovieActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.ui.activity.MovieDetail"
            android:label="@string/title_activity_movie_detail"
            android:parentActivityName=".Activity.ui.activity.MovieActivity"/>
        <activity
            android:name=".Activity.ui.activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme"
            android:parentActivityName=".Activity.ui.activity.MovieActivity"/>
    </application>

</manifest>
